<% if @errors %>
  <div class="container">
    <span>Please fix the following error(s):</span>
        <ul>
          <% @errors.each do |error| %>
            <li>- <%= error %></li>
          <% end %>
        </ul>
  </div>
<% end %>

<div class="container">
  <h4>Please create your username and password:</h4>
</div>
<div class="container">
  <form role="form" method="post" action="/users">
    <div class="form-group">
      <label for="username_input">Username: </label>
      <input class="form-control" id="username_input" name="user[name]" type="text" value="" placeholder="Enter new username">
    </div>
    <div class="form-group">
      <label for="password_input">Password: </label>
      <input class="form-control" id="password_input" name="user[password]" type="password" value="" placeholder="Enter new password">
    </div>
      <input class="btn btn-default" type="submit" value="Sign up">
  </form>
</div>